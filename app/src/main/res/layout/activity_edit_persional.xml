<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditPersionalActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/square_top_home"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_back_edpersional"
        android:backgroundTint="@color/pink"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa hồ sơ"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="350dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt tên hiển thị      "
        android:textColor="@color/pink"
        android:textSize="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="50dp"
        android:drawableEnd="@drawable/ic_pencil_persional"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Nguyễn Văn Nam|"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13/45"
            android:textSize="20dp"
            android:layout_marginStart="300dp"
            />
    </LinearLayout>

</RelativeLayout>