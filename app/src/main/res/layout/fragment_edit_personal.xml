<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.personal.EditPersonalFragment">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:background="@drawable/square_top_home"
        >
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back_left"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa hồ sơ"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_alignParentEnd="true"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        >
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt tên hiển thị      "
            android:textColor="@color/pink"
            android:textSize="20dp"
            android:drawableEnd="@drawable/ic_pencil_persional"
            android:layout_alignParentStart="true"
            />
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_back"
            />
        <TextView
            android:id="@+id/tv_count_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="20dp"
            android:layout_below="@id/edt_name"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

</RelativeLayout>