<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.main.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:background="@drawable/square_top_home"
        >

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:drawableEnd="@drawable/ic_search_home"
            android:hint="Tim kiem truyen..."
            android:layout_toLeftOf="@id/search_nangcao"
            android:layout_marginEnd="20dp"
            />

        <ImageView
            android:id="@+id/search_nangcao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_search1_home"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/new_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="30dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/pink_bg_home" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/white_bg_login" />

        <TextView
            android:id="@+id/titlenew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Moi cap nhat"
            android:textColor="@color/pink"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listNew"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/titlenew"
            android:layout_alignStart="@id/titlenew"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fav_bg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/pink_bg_home"
            android:layout_marginTop="30dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:paddingStart="10dp"
            android:paddingTop="35dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/white_bg_login" />

        <TextView
            android:id="@+id/titlefav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="35dp"
            android:text="Yeu Thich"
            android:textColor="@color/pink"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listFav"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@+id/titlefav"
            android:layout_alignStart="@id/titlefav"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp" />

    </RelativeLayout>

</LinearLayout>