<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.main.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:background="@drawable/square_top_home"
        >

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:drawableEnd="@drawable/ic_search_home"
            android:hint="Tim kiem truyen..."
            android:layout_toLeftOf="@id/search_nangcao"
            android:layout_marginEnd="20dp"
            />

        <ImageView
            android:id="@+id/search_nangcao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_search1_home"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:iss_auto_cycle="true"
                app:iss_delay="1000"
                app:iss_period="1000" />

            <RelativeLayout
                android:id="@+id/new_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                >

                <TextView
                    android:id="@+id/titlenew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mới nhất"
                    android:textColor="@color/pink"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titlenew"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fav_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                >

                <TextView
                    android:id="@+id/titlefav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yêu Thích"
                    android:textColor="@color/pink"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"

                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listFav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titlefav" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>